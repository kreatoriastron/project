<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Fiche" table="fiche">
    <indexes>
      <index name="fiche_school_id" columns="school"/>
      <index name="fiche_class_id" columns="class_digit"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="30" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="surname" type="string" column="surname" length="30" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="classDigit" type="integer" column="class_digit" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="classLetter" type="string" column="class_letter" length="1" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="phone" type="string" column="phone" length="10" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="mail" type="string" column="mail" length="30" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="childName" type="string" column="child_name" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="childSurname" type="string" column="child_surname" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="school" target-entity="School" fetch="LAZY">
      <join-columns>
        <join-column name="school" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
