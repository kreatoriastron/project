{% extends "base.html.twig" %}
 {% block body %}
     {{ parent() }}
         <!-- BEGIN CONTENT -->
         <div class="page-content-wrapper">
             <div class="page-content">
                 <!-- BEGIN PAGE HEAD -->
                 <div class="page-head">
                     <!-- BEGIN PAGE TITLE -->
                     <div class="page-title">
                         <h1>Administracja <small>Szkoły</small></h1>
                     </div>
                     <!-- END PAGE TITLE -->
                 </div>
                 <!-- END PAGE HEAD -->
                 <!-- BEGIN PAGE BREADCRUMB -->
                 <ul class="page-breadcrumb breadcrumb">
                     <li>
                         <a href="javascript:;">Administracja</a><i class="fa fa-circle"></i>
                     </li>
                     <li class="active">
                         Szkoły
                     </li>
                 </ul>
                 <!-- END PAGE BREADCRUMB -->
                 <!-- BEGIN PAGE CONTENT INNER -->
                 <div id="mainBox">
                     <div id="addUser" class="portlet box green">
                         <div class="portlet-title">
                             <div class="caption">
                                 <i class="fa fa-user-plus"></i>Edycja Szkoły
                             </div>
                         </div>
                         <div class="portlet-body form">
                             <!-- BEGIN FORM-->
                             <form action="{{ path('update_school') }}" method="post" enctype="multipart/form-data" class="form-horizontal" novalidate="novalidate" id="edit">
                                 <div class="alert alert-danger display-hide">
                                     <button class="close" data-close="alert"></button>
                                     Proszę poprawić błędy w formularzu!
                                 </div>
                                 <div class="form-body">
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Województwo</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.wojewodztwo  }}" class="form-control input-circle" name="wojewodztwo"  disabled>
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Powiat</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.powiat  }}" class="form-control input-circle" name="powiat"  disabled>
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Gmina</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.gmina  }}" class="form-control input-circle" name="gmina" disabled>
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Miasto</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.city  }}" class="form-control input-circle" name="city" disabled>
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Nazwa</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.name  }}" class="form-control input-circle" name="name" placeholder="Wprowadź Nazwę">
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Nazwa własna</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.name_own  }}" class="form-control input-circle" name="name_own" placeholder="Wprowadź Nazwę">
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Kod pocztowy</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.zipcode  }}" class="form-control input-circle" name="zipcode" disabled>
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Poczta</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.post  }}" class="form-control input-circle" name="post" disabled>
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Telefon</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.phone  }}" class="form-control input-circle" name="phone" placeholder="Wprowadź Telefon">
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">WWW</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.www  }}" class="form-control input-circle" name="www" placeholder="Wprowadź WWW">
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Liczba uczniów</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.student_count  }}" class="form-control input-circle" name="student_count" placeholder="Wprowadź liczbę uczniów">
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Liczba klas</label>
                                         <div class="col-md-4">
                                             <input type="text" value="{{ schoolArr.class_count  }}" class="form-control input-circle" name="class_count" placeholder="Wprowadź liczbę klas">
                                         </div>
                                     </div>
                                     <div class="form-group">
                                         <label class="col-md-3 control-label">Dr</label>
                                         <div class="col-md-4">
                                             <select id="select_dr" name="dr" placeholder="DR">
                                                 <option></option>
                                                 {% for DR in drList %}
                                                     <option value="{{ DR.id }}">{{ DR.surname }} {{ DR.name }}</option>
                                                 {%  endfor %}
                                             </select>
                                         </div>
                                     </div>
                                     <div>
                                         <div class="row">
                                             <div class="col-md-offset-3 col-md-9">
                                                 <input type="hidden"  name="schoolId" value="{{ schoolArr.id }}">
                                                 <button type="submit" class="btn btn-circle blue" id="add_user">Edytuj Szkołę</button>
                                             </div>
                                          </div>
                                     </div>
                             </form>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
 {% endblock %}
 {%  block stylesheets %}
     {{  parent () }}
     <link rel="stylesheet" type="text/css" href="{{ asset('assets/global/plugins/selectize/selectize.css') }}">
 {% endblock %}
 {% block javascripts %}
     {{  parent() }}
     <script type="text/javascript" src="{{ asset('assets/global/plugins/select2/select2.min.js') }}"></script>
     <script src="{{ asset('assets/global/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
     <script src="{{ asset('assets/global/plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
     <script src="{{ asset('bundles/admin/js/School/validation/edit-validation.js') }}" type="text/javascript"></script>
     <script type="text/javascript" src="{{ asset('assets/global/plugins/selectize/selectize.js') }}"></script>
     <script>
         $(document).ready(function(){
            FormValidation.init('{{ path(action_url) }}');

             var select_dr, $select_dr;
             $select_dr = $('#select_dr').selectize();
             select_dr  = $select_dr[0].selectize;
             select_dr.setValue({{ schoolArr.dr_id }}, false);

             jQuery.extend(jQuery.validator.messages, {
                 required: "To pole jest wymagane",
                 email: "Proszę podać poprawny adres mailowy",
                 number: "Proszę podać poprawny numer telefonu",
                 digits: "Proszę podać cyfrę"
             });
         })
     </script>
 {% endblock %}

